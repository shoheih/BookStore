<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="192dp" android:background="@color/colorPrimary"
                                             android:padding="16dp">

    <TextView
            android:text="@string/full_name_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/full_name"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" tools:text="@tools:sample/full_names"
            app:fontFamily="sans-serif" android:textSize="24sp" android:textColor="@android:color/white"/>
</android.support.constraint.ConstraintLayout>